      <!-- 开始游戏按钮 -->
      <div class="item" @click="start">
        <text class="mtxt">开始游戏</text>
      </div>

      <!-- 赞赏支持按钮 -->
      <div class="item" @click="toindex">
        <text class="mtxt">赞赏支持</text>
      </div>
    </div>
  </div>
</template>

<script>
import router from "@system.router"
import app from "@system.app"

// 主界面逻辑
export default {
  // 页面数据
  data: {
    versName: "" // 应用版本号
  },

  // 页面初始化
  onInit() {
    const appInfo = app.getInfo()
    this.versName = appInfo.versionName
  },

  // 开始游戏按钮点击事件
  start() {
    router.replace({
      uri: "/pages/difficulty"
    })
  },

  // 跳转到赞赏页面
  toindex() {
    router.push({
      uri: "/pages/index"
    })
  },

  // 返回按钮点击事件
  goBack() {
    app.terminate()
  }
}
</script>

