<template>
  <!-- 主界面 -->
  <div class="body">
    <!-- 返回按钮 -->
    <div class="back" @click="goBack">
      <text class="btxt">&lt;</text>
    </div>

    <!-- 标题区域 -->
    <div class="head">
      <text class="titl">吃豆人</text>
    </div>

    <!-- 主菜单区域 -->
    <div class="info">
      <!-- 版本信息 -->
